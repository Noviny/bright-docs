{
  "name": "changeset-bot",
  "version": "1.0.0",
  "description": "Bot to detect changesets in PRs",
  "author": "Peter Yu <pyu@atlassian.com>",
  "maintainers": ["Peter Yu", "Ben Conolly"],
  "license": "MIT",
  "private": true,
  "repository": "https://github.com/apps/changeset-bot.git",
  "homepage": "https://github.com/apps/changeset-bot",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "lint": "standard --fix",
    "test": "jest",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "probot": "^7.2.0"
  },
  "devDependencies": {
    "jest": "^24.1.0",
    "nock": "^10.0.0",
    "nodemon": "^1.12.1",
    "smee-client": "^1.0.2",
    "standard": "^12.0.1"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
