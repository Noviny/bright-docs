{
  "compilerOptions": {
    "outDir": "build"
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "strict": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "strictFunctionTypes": true,
    "target": "esnext",
    "noEmit": true,
    "module": "esnext",
    "lib": ["dom", "es2017"],
    },
  "include": [
    "packages/react-changelogs/src/**/*",
    "packages/website/**/*",
    "typings/**/*"
  ],
  "typeRoots": ["./typings", "./node_modules/@types"],
}
